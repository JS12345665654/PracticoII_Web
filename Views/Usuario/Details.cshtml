@model PracticoII_Web.Data.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-dark">Detalles del Usuario</h2>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">Rol</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-warning">
                <i class="bi bi-pencil-fill"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
        </div>
    </div>
</div>