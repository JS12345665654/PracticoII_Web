@model IEnumerable<PracticoII_Web.Data.Models.Incidente>
@using System.Security.Claims
@{
    var Roles = User.FindFirst(ClaimTypes.Role)?.Value;
    ViewData["Title"] = "Incidentes";
}

<!-- DataTables Styles -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lista de Incidentes</h1>
        <a class="btn btn-primary" asp-action="Create">+ Nuevo Incidente</a>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <input id="searchInput" type="text" class="form-control w-25" placeholder="Buscar incidentes...">
    </div>

    <div class="table-responsive">
        <table id="incidenteTable" class="table table-dark table-hover table-bordered rounded shadow">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Usuario</th>
                    <th>Proyecto</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Titulo</td>
                        <td>@item.Descripcion</td>
                        <td>@item.IdUsuarioReportaNavigation?.Nombre</td>
                        <td>@item.IdProyectoNavigation?.Nombre</td>
                        <td>
                            @if (Roles == "Administrador")
                            {
                                <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.IdIncidente">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            }

                            <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@item.IdIncidente">
                                <i class="bi bi-eye-fill"></i> Detalle
                            </a>

                            @if (Roles == "Administrador")
                            {
                                <button type="button"
                                        class="btn btn-sm btn-danger btn-eliminar"
                                        data-url="@Url.Action("Delete", "Incidente", new { id = item.IdIncidente })"
                                        data-nombre="@item.Titulo">
                                    <i class="bi bi-trash-fill"></i> Borrar
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Confirmación -->
<div class="modal fade" id="confirmEliminarModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro que deseas eliminar <strong id="modalNombre"></strong>?
            </div>
            <div class="modal-footer">
                <form id="formEliminar" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btnConfirmarEliminar" type="button" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"></script>

    <script>
        $(document).ready(function () {
            $('#incidenteTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                ordering: true,
                paging: true,
                searching: false
            });
        });

        // Filtro en vivo personalizado
        document.getElementById("searchInput").addEventListener("input", function () {
            var value = this.value.toLowerCase();
            const rows = document.querySelectorAll('#incidenteTable tbody tr');
            rows.forEach(row => {
                const titulo = row.cells[0].textContent.toLowerCase();
                const descripcion = row.cells[1].textContent.toLowerCase();
                const usuario = row.cells[2].textContent.toLowerCase();
                const proyecto = row.cells[3].textContent.toLowerCase();

                row.style.display = (titulo.includes(value) || descripcion.includes(value) || usuario.includes(value) || proyecto.includes(value)) ? '' : 'none';
            });
        });

        // Confirmar eliminación con modal
        document.addEventListener('DOMContentLoaded', function () {
            let urlEliminar = null;
            const modalEliminar = new bootstrap.Modal(document.getElementById('confirmEliminarModal'));
            const btnConfirmarEliminar = document.getElementById('btnConfirmarEliminar');
            const modalNombre = document.getElementById('modalNombre');
            const formEliminar = document.getElementById('formEliminar');

            document.querySelectorAll('.btn-eliminar').forEach(button => {
                button.addEventListener('click', function () {
                    urlEliminar = this.getAttribute('data-url');
                    const nombre = this.getAttribute('data-nombre') || "este incidente";
                    modalNombre.textContent = nombre;
                    modalEliminar.show();
                });
            });

            btnConfirmarEliminar.addEventListener('click', function () {
                if (!urlEliminar) return;
                formEliminar.action = urlEliminar;
                formEliminar.submit();
            });
        });
    </script>
}
