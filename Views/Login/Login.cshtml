@model PracticoII_Web.Data.Models.LoginRegister

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4 fw-bold text-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar sesión
                    </h3>
                    <form asp-controller="Login" asp-action="LoginPost" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="FormType" value="Login" />

                        <div class="form-floating mb-3">
                            <input asp-for="Login.Email" class="form-control" placeholder="ejemplo@correo.com" />
                            <label asp-for="Login.Email"></label>
                            <span asp-validation-for="Login.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Login.Contraseña" class="form-control" type="password" placeholder="••••••" />
                            <label asp-for="Login.Contraseña"></label>
                            <span asp-validation-for="Login.Contraseña" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="Recordarme" id="recordarme" />
                            <label class="form-check-label" for="recordarme">
                                Recordarme
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 shadow-sm">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Registro -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4 fw-bold text-success">
                        <i class="bi bi-person-plus-fill me-2"></i>Registrarse
                    </h3>
                    <form asp-controller="Login" asp-action="RegisterPost" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="FormType" value="Register" />

                        <div class="form-floating mb-3">
                            <input asp-for="Register.Nombre" class="form-control" placeholder="Nombre completo" />
                            <label asp-for="Register.Nombre"></label>
                            <span asp-validation-for="Register.Nombre" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Register.Email" class="form-control" placeholder="ejemplo@correo.com" />
                            <label asp-for="Register.Email"></label>
                            <span asp-validation-for="Register.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Register.Contraseña" class="form-control" type="password" placeholder="••••••" />
                            <label asp-for="Register.Contraseña"></label>
                            <span asp-validation-for="Register.Contraseña" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Register.Rol" class="form-label fw-semibold">Rol</label>
                            <select asp-for="Register.Rol" class="form-select">
                                <option value="">Seleccione un rol</option>
                                <option value="Administrador">Administrador</option>
                                <option value="Usuario">Usuario</option>
                            </select>
                            <span asp-validation-for="Register.Rol" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 shadow-sm">Registrarse</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}