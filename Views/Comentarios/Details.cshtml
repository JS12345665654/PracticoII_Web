@model PracticoII_Web.Data.Models.Comentario

@{
    ViewData["Title"] = "Detalles del Comentario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-dark">Detalles del Comentario</h2>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Texto</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Texto)</dd>

                <dt class="col-sm-3 fw-bold">Fecha</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Fecha)</dd>

                <dt class="col-sm-3 fw-bold">Usuario</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdUsuarioNavigation.IdUsuario)</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model?.IdComentario" class="btn btn-warning">
                <i class="bi bi-pencil-fill"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
        </div>
    </div>
</div>