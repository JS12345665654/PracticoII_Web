@model IEnumerable<PracticoII_Web.Data.Models.Comentario>

@using System.Security.Claims
@{
    var Roles = User.FindFirst(ClaimTypes.Role)?.Value;
}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>ITES | SISTEMA DE BUG TRACKER</h1>
        <a asp-action="Create" asp-controller="Comentarios" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Agregar Comentario
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-dark">
            <h3 class="text-white mb-0"><strong>Comentarios Registrados</strong></h3>
        </div>

        <div class="card-body bg-light">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IdComentario)</th>
                            <th>@Html.DisplayNameFor(model => model.IdUsuario)</th>
                            <th>@Html.DisplayNameFor(model => model.Texto)</th>
                            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IdComentario)</td>
                                <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
                                <td>@Html.DisplayFor(modelItem => item.Texto)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                                <td class="text-center">
                                    @if (Roles == "Administrador")
                                    {
                                        <a class="btn btn-sm btn-warning me-2" asp-action="Edit" asp-route-id="@item.IdComentario">
                                            <i class="bi bi-pencil-fill"></i> Editar
                                        </a>
                                    }
                                    @if (Roles == "Administrador")
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-danger btn-eliminar"
                                                data-url="@Url.Action("Delete", "Comentarios", new { id = item.IdComentario })"
                                                data-nombre="Comentario @item.IdComentario">
                                            <i class="bi bi-trash-fill"></i> Eliminar
                                        </button>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="confirmEliminarModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro que deseas eliminar <strong id="modalNombre"></strong>?
            </div>
            <div class="modal-footer">
                <form id="formEliminar" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btnConfirmarEliminar" type="button" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let urlEliminar = null;
            const modalEliminar = new bootstrap.Modal(document.getElementById('confirmEliminarModal'));
            const btnConfirmarEliminar = document.getElementById('btnConfirmarEliminar');
            const modalNombre = document.getElementById('modalNombre');
            const formEliminar = document.getElementById('formEliminar');

            document.querySelectorAll('.btn-eliminar').forEach(button => {
                button.addEventListener('click', function () {
                    urlEliminar = this.getAttribute('data-url');
                    const nombre = this.getAttribute('data-nombre') || "este elemento";
                    modalNombre.textContent = nombre;
                    modalEliminar.show();
                });
            });

            btnConfirmarEliminar.addEventListener('click', function () {
                if (!urlEliminar) return;
                formEliminar.action = urlEliminar;
                formEliminar.submit();
            });
        });
    </script>
</div>


